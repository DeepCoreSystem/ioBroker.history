{
    "common": {
        "name":                     "history",
        "desc":                     "manages state history",
        "version":                  "0.0.2",
        "mode":                     "daemon",
        "platform":                 "javascript/Node.js",
        "loglevel":                 "info",
        "keywords":                 ["charts", "history", "logging"],
        "main":                     "history.js"
    },
    "native": {
        "minLength": 64,
        "maxLength": 128
    },
    "objects": [
        {
            "_id": "_design/history",
            "language": "javascript",
            "views": {
                "state": {
                    "map": "function(doc) { if (doc.type=='state' && doc.common.history) emit(doc._id, doc.common.history) }"
                }
            }
        }
    ]
}